<!DOCTYPE html>
<html>
<head>
  <title>Applauser</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div>
		<% if signed_in? %>
		<%= link_to current_user.username, dashboard_path %>
			<%= link_to "Sign Out", session_path, method: :delete, data: { confirm: "Are you sure?" } %>
		<% else %>
			<%= link_to "Sign In", new_session_path %>
			<%= link_to "Sign Up", new_user_path %>
		<% end %>
	</div>
	<div>
	<% if alert %>
		<p><%= alert %></p>
	<% end %>
	</div>

<%= yield %>

</body>
</html>
